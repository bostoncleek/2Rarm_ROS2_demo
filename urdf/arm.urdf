<?xml version="1.0"?>
<robot name="two_link_arm" xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- <xacro:property name="props" value="${load_yaml('$(find simle_arm)/config/arm.yaml')}" />

<xacro:property name="l1" value="${props['L1']}" />
<xacro:property name="l2" value="${props['L2']}" /> -->


<link name="base" >
  <visual>
    <geometry>
      <sphere radius="0.1" />
    </geometry>
    <material name="green_mat">
      <color rgba="0 1 0 1" />
    </material>
  </visual>
</link>

<link name="L1">
  <visual>
    <origin xyz="${2.0/2} 0 0" rpy="${pi/2}, 0, ${-pi/2}" />
    <geometry>
      <cylinder radius="0.1" length="2.0" />
    </geometry>
    <material name="green_mat">
      <color rgba="0 1 0 1" />
    </material>
  </visual>
</link>


<link name="L2">
  <visual>
    <origin xyz="${1.0/2} 0 0" rpy="${pi/2}, 0, ${-pi/2}" />
    <geometry>
      <cylinder radius="0.1" length="1.0" />
    </geometry>
    <material name="red_mat">
      <color rgba="1 0 0 1" />
    </material>
  </visual>
</link>

<link name="End_Effector">
  <visual>
    <origin xyz="0 0 0" rpy="0 0 0" />
    <geometry>
      <sphere radius="0.1" />
    </geometry>
    <material name="green_mat">
        <color rgba="0 1 0 0" />
    </material>
  </visual>
</link>


<joint name="joint1" type="continuous">
  <axis xyz="0 0 1"/>
  <parent link="base" />
  <child link="L1" />
</joint>

<joint name="joint2" type="continuous">
  <origin xyz="2.0 0 0" rpy="0 0 0" />
  <axis xyz="0 0 1"/>
  <parent link="L1" />
  <child link="L2" />
</joint>


<joint name="end" type="continuous">
  <origin xyz="${l2} 0 0" rpy="0 0 0" />
  <parent link="L2" />
  <child link="End_Effector" />
</joint>

</robot>
